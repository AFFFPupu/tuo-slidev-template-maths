{
  "name": "slidev-presentation",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npx slidev build",
    "build:lesson4": "npx slidev build Lesson4.md --base /STEP-lesson4/ --out dist/lesson4",
    "build:lesson5": "npx slidev build Lesson5.md --base /STEP-lesson5/ --out dist/lesson5",
    "build:all": "npx slidev build *.md",
    "dev": "npx slidev --open",
    "export": "npx slidev export"
  },
  "dependencies": {
    "@slidev/cli": "^0.49.0",
    "@slidev/theme-default": "*",
    "@slidev/types": "^0.49.0",
    "@vueuse/core": "^10.7.0",
    "codemirror-theme-vars": "^0.1.2",
    "katex": "^0.16.21",
    "markdown-it": "^14.1.0",
    "markdown-it-katex": "^2.0.3",
    "mathpix-markdown-it": "^2.0.9",
    "prism-theme-vars": "^0.2.5",
    "slidev-addon-tldraw": "^0.3.1",
    "theme-vitesse": "^0.7.9",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "playwright-chromium": "^1.40.0",
    "typescript": "^5.0.0"
  },
  "slidev": {
    "colorSchema": "both",
    "highlighter": "shiki",
    "defaults": {
      "fonts": {
        "sans": "Nunito Sans",
        "mono": "Fira Code"
      },
      "hightlighter": "shiki"
    }
  }
}
